{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "esnext",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "strictFunctionTypes": false,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declarationDir": "./es",
    "outDir": "./es",
    "skipLibCheck": true,
    "importHelpers": false,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./src/models/global.d.ts"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": [
    "./src"
  ]
}
